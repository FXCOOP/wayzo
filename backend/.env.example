# Wayzo Environment Configuration
# Copy this file to .env and fill in your values

# Required for AI functionality
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Optional: Affiliate IDs for booking links (earn commission)
BOOKING_AID=your_booking_com_affiliate_id
GYG_PID=your_getyourguide_partner_id
KAYAK_AID=your_kayak_affiliate_id

# Production settings
NODE_ENV=production
PORT=10000

# CORS origin (your frontend domain)
ORIGIN=https://your-frontend-domain.com

# Optional: Stripe for payments (if implementing paid plans)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret